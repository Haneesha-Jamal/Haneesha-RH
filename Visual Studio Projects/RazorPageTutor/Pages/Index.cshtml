@page
@model IndexModel

<!Doctype <html xmlns="http://www.w3.org/1999/xhtml">
    <head><title>Products List</title></head>
    <body>
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
            @foreach(var i in Model.Products)
            {
                <tr>
                    <td>@i.Id</td>
                    <td>@i.Name</td>
                    <td>@i.Price</td>
                </tr>
            }
        </tbody>
        </table>
    </body>
</html>
